#!/usr/bin/make -f

%:
	dh $@

override_dh_installinit:
	dh_installinit --no-start --name="salt-master"
	dh_installinit --no-start --name="salt-minion"
	dh_installinit --no-start --name="salt-syndic"

get-orig-source:
	git clone https://github.com/saltstack/salt.git
	mv salt salt-0.9.5
	tar -zcvf --exclude=debian/ --exlude=.git salt_0.9.5.orig.tar.gz salt-0.9.5
	mv salt_0.9.5.orig.tar.gz ../
